<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Card_View">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/Card_View"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="2dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image4" />

                    <TextView
                        android:id="@+id/eda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/image3"
                        android:background="@color/color3"
                        android:padding="8dp"
                        android:text="Hill Palace Museum, Thripunithura"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image3"
                android:background="@color/color5"
                android:padding="8dp"
                android:text="Hill Palace Overview"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hill Palace is the largest archaeological museum in Kerala, at Tripunithura, Kochi, near Karingachira area. It was the administrative office of Kochi Rajas. Built in 1865, the Palace complex consists of 49 buildings in the traditional architectural style, spreading across in 54 acres. The complex has an archaeological museum, a heritage museum, a deer park, a pre-historic park and a children_Ã£_s park. The campus of the museum is home to several rare species of medicinal plants. Presently the palace has been converted into a museum by The palace is about 12 km from Ernakulam mainland and approachable by road and rail."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image3"
                android:background="@color/color5"
                android:padding="8dp"
                android:text="Architecture of Hill palace"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="It is built in the traditional Kerala style of architecture.On display in the full-fledged Ethno-archaeological museum are oil-paintings, murals, sculptures in stone and manuscripts, inscriptions, coins, belongings of the Kochi royal family and royal furniture including the simhasana (throne)."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image3"
                android:background="@color/color5"
                android:padding="8dp"
                android:text="Tips"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="The palace stays open from 9.00 to 12.30 hrs - 14.00 to 16.30 hrs on all days except Mondays."
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/NavigationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="bottom|right"
                    card_view:backgroundTint="@android:color/white"
                    card_view:fabSize="normal"
                    card_view:srcCompat="@drawable/navi" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/GuideButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="225dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="bottom|left"

                    card_view:backgroundTint="@android:color/white"

                    card_view:fabSize="normal"
                    card_view:srcCompat="@drawable/gui" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>